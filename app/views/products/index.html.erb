<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <h5 class="my-0 mr-md-auto font-weight-normal">Revv Store</h5>
    <nav class="my-2 my-md-0 mr-md-3">
      <a class="p-2 text-dark" href="#">Features</a>
      <a class="p-2 text-dark" href="#">Support</a>
    </nav>
</div>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Our packages</h1>
  <p class="lead">Get all stuff done with our service packages.</p>
</div>

<div class="container">
  <div class="container-fluid">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-lg-4 card-deck mb-3 text-center">
          <div class="card-header">
          <h4 class="my-0 font-weight-normal"><%= product.name %></h4>
        </div>
        <div class="card-body">
          <h1 class="card-title pricing-card-title">$<%= (product.price * 0.01).to_s + "0" %> <small class="text-muted"></small></h1>
          <ul class="list-unstyled mt-3 mb-4">
            <li>One time fee</li>
            <li><%= product.description %></li>
            <li>Email support</li>
            <li>Help center access</li>
          </ul>
          <%= button_to "Click here to purchase", orders_path, {method: 'post', remote: true, class: 'btn btn-lg btn-block btn-outline-primary', params: { product_id: product.id } } %>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

  